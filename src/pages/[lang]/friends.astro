---
import { LOCALES, useTranslations, type Lang } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import PageHeadline from "@/components/PageHeadline.astro";
import FriendLinks from "@/components/FriendLinks.astro";

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

const title = t({
    ja: "友達",
    en: "Friends",
    "zh-cn": "友链",
    ar: "أصدقاء",
});

const intro = t({
    ja: "素晴らしいウェブサイトとブログのコレクション。",
    en: "A collection of wonderful websites and blogs.",
    "zh-cn": "这里收录了一些优秀的网站和博客。",
    ar: "مجموعة من المواقع والمدونات الرائعة.",
});

export const getStaticPaths = () =>
    Object.keys(LOCALES).map((lang) => ({
        params: { lang },
    }));
---

<Layout {title}>
    <PageHeadline {title}>
        <p
            style="margin-block-start: var(--sp-s); opacity: 0.9; font-size: 0.95rem;"
        >
            {intro}
        </p>
    </PageHeadline>
    <FriendLinks />
</Layout>
