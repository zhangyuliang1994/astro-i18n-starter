---
import { LOCALES, useTranslations, type Lang } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import PageHeadline from "@/components/PageHeadline.astro";
import Pagination from "@/components/Pagination.astro";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = await getCollection("blog");
  
  // 为每种语言生成分页路径
  return Object.keys(LOCALES).flatMap((lang) => {
    const posts = allPosts
      .filter((post) => post.id.split("/")[0] === lang)
      .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()); // 按日期降序排列
    
    return paginate(posts, {
      params: { lang },
      pageSize: 10,
    });
  });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const locale = Astro.params.lang as Lang;
const t = useTranslations(locale);

const title = t({
  ja: "ブログ",
  en: "Blog",
  "zh-cn": "博客",
  ar: "مدونة",
});

const pageTitle = page.currentPage > 1 
  ? `${title} - ${t({ ja: "ページ", en: "Page", "zh-cn": "第", ar: "صفحة" })} ${page.currentPage}`
  : title;
---

<Layout title={pageTitle}>
  <PageHeadline {title} />

  <p>
    {
      t({
        ja: "技術的な課題、SEO戦略、海外サイト構築の経験を共有しています。",
        en: "Sharing technical challenges, SEO strategies, and experiences in building overseas websites.",
        "zh-cn": "分享技术难题、SEO 策略，以及出海建站的实践经验。",
        ar: "مشاركة التحديات التقنية واستراتيجيات SEO وتجارب بناء المواقع الخارجية.",
      })
    }
  </p>

  <ul>
    {
      page.data.map((post) => {
        const [, ...id] = post.id.split("/");
        return (
          <li>
            <a href={`/${locale}/blog/${id.join("/")}/`}>
              {post.data.cover && (
                <Image src={post.data.cover} alt={post.data.title} />
              )}
              <h2>{post.data.title}</h2>
            </a>
          </li>
        );
      })
    }
  </ul>

  <Pagination page={page} lang={locale} />
</Layout>

<style>
  p {
    margin-block-start: var(--sp-s);
  }
  ul {
    margin-block-start: var(--sp-m);
    display: grid;
    gap: var(--sp-s);
    grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
  }

  li {
    margin-block-end: 1rem;
    img {
      border-radius: 6px;
    }
  }
</style>
