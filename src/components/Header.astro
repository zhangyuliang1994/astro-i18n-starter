---
// Header & Navigation UI displayed on each page.

import LocaleSelect from "@/components/i18n/LocaleSelect.astro";
import { Image } from "astro:assets";
import { useTranslations, type Lang } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
const t = useTranslations(Astro.currentLocale as Lang);

import LogoEn from "@/assets/logo-en.png";
import LogoZh from "@/assets/logo-zh.png";
import AstroImage from "@/assets/astro-logo.svg";

const locale = Astro.currentLocale as Lang;

const isActive = (path: string) =>
  getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
---

<header class="l-header l-content">
  <h1 dir="ltr">
    <a href={getRelativeLocaleUrl(locale, "/")}>
      {
        locale === "en" ? (
          <Image src={LogoEn} alt="frency" class="logo-img" />
        ) : locale === "zh-cn" ? (
          <Image src={LogoZh} alt="xiaofeng" class="logo-img" />
        ) : (
          <Image src={AstroImage} alt="Astro" />
        )
      }
    </a>
  </h1>

  <div class="header-actions">
    <nav>
      <ul>
        <li>
          <a
            href={getRelativeLocaleUrl(locale, "/blog")}
            class={isActive("/blog") ? "active" : null}
          >
            {t({ ja: "ブログ", en: "Blog", "zh-cn": "博客", ar: "مدونة" })}
          </a>
        </li>

        <li>
          <a
            href={getRelativeLocaleUrl(locale, "/tags")}
            class={isActive("/tags") ? "active" : null}
          >
            {t({ ja: "タグ", en: "Tags", "zh-cn": "标签", ar: "الوسوم" })}
          </a>
        </li>

        <li>
          <a
            href={getRelativeLocaleUrl(locale, "/categories")}
            class={isActive("/categories") ? "active" : null}
          >
            {
              t({
                ja: "カテゴリー",
                en: "Categories",
                "zh-cn": "分类",
                ar: "التصنيفات",
              })
            }
          </a>
        </li>

        <li>
          <a
            href={getRelativeLocaleUrl(locale, "/guestbook")}
            class={isActive("/guestbook") ? "active" : null}
          >
            {
              t({
                ja: "ゲストブック",
                en: "Guestbook",
                "zh-cn": "留言板",
                ar: "دفتر الزوار",
              })
            }
          </a>
        </li>

        <li>
          <a
            href={getRelativeLocaleUrl(locale, "/about")}
            class={isActive("/about") ? "active" : null}
          >
            {t({ ja: "約", en: "About", "zh-cn": "关于", ar: "حول" })}
          </a>
        </li>

        <li>
          <a
            href={getRelativeLocaleUrl(locale, "/friends")}
            class={isActive("/friends") ? "active" : null}
          >
            {t({ ja: "友達", en: "Friends", "zh-cn": "友链", ar: "أصدقاء" })}
          </a>
        </li>
      </ul>
    </nav>
    <LocaleSelect />
  </div>
</header>

<style>
  .l-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--sp-m);
    padding-block: var(--sp-m);
    margin-block-end: var(--sp-l);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--sp-m);
    justify-content: center;
    flex-wrap: wrap;
  }

  h1 {
    font-size: 24px; /* Reset header size implies smaller logo area usually, or keep it big? kept reasonably sized */
    line-height: 1;
    margin-block-start: 0; /* Reset */
    margin-inline-start: 0; /* Reset */

    a {
      display: flex;
      align-items: center;
      text-decoration: none;
    }

    .logo-img {
      width: 100%;
      height: auto;
      aspect-ratio: 5/1;
      object-fit: cover;
      border-radius: 8px;
    }
  }

  nav {
    display: flex;
    align-items: center;
  }

  ul {
    display: flex;
    gap: var(--sp-s);
    margin: 0; /* Reset */
    padding: 0;
    list-style: none;

    a {
      font-size: 1rem;
      font-weight: 600;
      color: var(--color-text);
      padding: 0.5em 0.8em;
      border-radius: 6px;
      transition: all 0.2s ease;
      text-decoration: none;

      &:hover {
        background-color: rgba(0, 0, 0, 0.05);
        color: var(--color-theme);
      }

      &.active {
        color: var(--color-theme);
        background-color: color-mix(
          in srgb,
          var(--color-theme) 10%,
          transparent
        );
      }

      /* mobile optimization? */
    }
  }

  /* Responsive tweak */
  @media (max-width: 900px) {
    .l-header {
      flex-direction: column;
      gap: var(--sp-m);
    }
    .header-actions {
      flex-direction: column;
      gap: var(--sp-s);
    }
    ul {
      display: grid;
      grid-template-columns: repeat(3, auto);
      justify-content: center;
      gap: var(--sp-s);
    }
  }
</style>
